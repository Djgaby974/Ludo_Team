{% extends 'base.html.twig' %}

{% block title %}LudoTeam - Accueil{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="jumbotron text-center mb-4">
        <h1 class="display-4">Bienvenue sur LudoTeam</h1>
        <p class="lead">Votre plateforme de jeux de société collaborative</p>
        
        {% if app.user %}
            <p class="mt-3">Ravi de vous revoir, {{ app.user.prenom }} !</p>
        {% else %}
            <div class="mt-3">
                <a href="{{ path('app_login') }}" class="btn btn-primary me-2">Connexion</a>
                <a href="{{ path('app_register') }}" class="btn btn-outline-primary">Inscription</a>
            </div>
        {% endif %}
    </div>

    <div class="row">
        <div class="col-md-6">
            <h2>Événements à venir</h2>
            {% if upcoming_events|length > 0 %}
                <div class="list-group">
                    {% for event in upcoming_events %}
                        <a href="{{ path('event_show', {'id': event.id}) }}" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">{{ event.dateEvent|date('d/m/Y H:i') }}</h5>
                            </div>
                            <p class="mb-1">Organisé par {{ event.organisateur.prenom }}</p>
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                <p>Aucun événement à venir pour le moment.</p>
            {% endif %}
        </div>

        <div class="col-md-6">
            <h2>Jeux populaires</h2>
            {% if popular_games|length > 0 %}
                <div class="row">
                    {% for game in popular_games %}
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{ game.name }}</h5>
                                    <p class="card-text">Max {{ game.maxParticipants }} joueurs</p>
                                    <a href="{{ path('game_show', {'id': game.id}) }}" class="btn btn-sm btn-outline-primary">Détails</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p>Aucun jeu disponible pour le moment.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
