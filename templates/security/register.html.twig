{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Cr√©er un compte</h2>
                </div>
                <div class="card-body">
                    {{ form_start(registrationForm, {'attr': {'class': 'registration-form'}}) }}
                        {% for child in registrationForm.children %}
                            {% if child.vars.name != '_token' %}
                                <div class="mb-3">
                                    {{ form_label(child, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(child, {'attr': {'class': 'form-control'}}) }}
                                    {% if form_errors(child)|length > 0 %}
                                        <div class="text-danger small mt-1">
                                            {% for error in form_errors(child) %}
                                                <p class="mb-0">{{ error.message }}</p>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endfor %}

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">S'inscrire</button>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
