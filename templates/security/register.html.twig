{% extends 'base.html.twig' %}
{% from 'base.html.twig' import display_form_errors %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Créer un compte</h2>
                </div>
                <div class="card-body">
                    {{ form_start(registrationForm, {'attr': {'class': 'registration-form'}}) }}
                        {{ display_form_errors(registrationForm) }}
                        <div class="mb-3">
                            {{ form_label(registrationForm.email, 'Adresse email') }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(registrationForm.email)|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {% for error in form_errors(registrationForm.email) %}
                                        <p class="mb-0">{{ error.message }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.prenom, 'Prénom') }}
                            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(registrationForm.prenom)|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {% for error in form_errors(registrationForm.prenom) %}
                                        <p class="mb-0">{{ error.message }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(registrationForm.plainPassword)|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {% for error in form_errors(registrationForm.plainPassword) %}
                                        <p class="mb-0">{{ error.message }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">S'inscrire</button>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
