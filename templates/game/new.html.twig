{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau jeu{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Ajouter un nouveau jeu</h1>

    {{ form_start(form, {'attr': {'class': 'form'}}) }}
        {% for field in form %}
            <div class="form-group mb-3">
                {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(field) }}
            </div>
        {% endfor %}

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Cr√©er le jeu</button>
            <a href="{{ path('app_game_index') }}" class="btn btn-secondary">Annuler</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
