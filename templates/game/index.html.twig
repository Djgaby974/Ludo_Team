{% extends 'base.html.twig' %}

{% block title %}Liste des jeux{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Nos jeux</h1>

    {% if games is empty %}
        <div class="alert alert-info">
            Aucun jeu n'est disponible pour le moment.
        </div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for game in games %}
                <div class="col">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title">{{ game.name }}</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Nombre de joueurs :</strong> 2 - {{ game.maxParticipants }}</p>
                            
                            {% if game.description %}
                                <p class="card-text text-truncate">{{ game.description }}</p>
                            {% endif %}
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('app_game_show', {'id': game.id}) }}" class="btn btn-sm btn-info">
                                DÃ©tails
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    {% if app.user %}
        <div class="text-center mt-4">
            <a href="{{ path('app_game_new') }}" class="btn btn-primary">
                Ajouter un nouveau jeu
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
